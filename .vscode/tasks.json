{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++-11 build active file",
            "command": "/usr/bin/g++-11",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                // "-I", 
                // "/usr/include/freetype2",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exec",
                "-lGLEW",
                "-lGLU",
                "-lGL", 
                "`pkg-config --static --libs glfw3`",
                // "-lfreetype",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}